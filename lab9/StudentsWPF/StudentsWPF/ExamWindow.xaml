<Window x:Name="ExamWindow1" x:Class="StudentsWPF.ExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsWPF"
        mc:Ignorable="d"
        Title="ExamWindow" Height="218" Width="364">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="299*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="355*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="NumExam" HorizontalAlignment="Left" Height="23" Margin="69.4,9.6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Grid.Column="1" Grid.Row="1" PreviewTextInput="NumExam_PreviewTextInput"/>
        <Label Content="Enter num of exams" HorizontalAlignment="Left" Margin="69.4,29,0,0" VerticalAlignment="Top" Width="139" Grid.Column="1" Height="25"/>
        <Button Content="Ok" Grid.Column="1" HorizontalAlignment="Left" Height="29" Margin="95.4,59.6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="83" Click="Button_Click"/>
    </Grid>
</Window>
