<Window x:Class="StudentsWPF.ShowInfoWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsWPF"
        mc:Ignorable="d"
        Title="Show Information" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="57364.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="358*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="showTable" HorizontalAlignment="Center" Height="381" Margin="10,0,9.6,0" VerticalAlignment="Top" Width="774" ScrollViewer.HorizontalScrollBarVisibility="Disabled" IsReadOnly="True" Background="#FFE4FCE5" ItemsSource="{Binding YourSource}" 
                         CanUserResizeColumns="False"
                         EnableRowVirtualization="False" SelectedItem="{Binding Student}" Grid.ColumnSpan="2"  >
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"  />
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Second Name" Binding="{Binding Path=SecondName}" Width="100" />
                <DataGridTextColumn Header="First Name" Binding="{Binding Path=FirstName}" Width="100" />
                <DataGridTextColumn Header="Patronymic" Binding="{Binding Path=ThirdName}" Width="150" />
            </DataGrid.Columns>

            
                
               


        </DataGrid>


    </Grid>

</Window>
