<Window x:Class="StudentsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="192*"/>
            <ColumnDefinition Width="601*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Add student" HorizontalAlignment="Left" Height="43" Margin="80,105,0,0" VerticalAlignment="Top" Width="249" FontSize="16" Click="Button_Add" Grid.Column="1"/>
        <Button Content="Show Information" HorizontalAlignment="Left" Height="43" Margin="80,168,0,0" VerticalAlignment="Top" Width="249" FontSize="16" Click="Button_Show" Grid.Column="1"/>
        <Button x:Name="Add_Exams" Content="Add exams" Grid.Column="1" HorizontalAlignment="Left" Height="47" Margin="80,30,0,0" VerticalAlignment="Top" Width="249" Click="Add_Exams_Click"/>

    </Grid>
</Window>
